@using Entities.Concrete
@model Admin
@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-sm-12">
    @using (Html.BeginForm("AddAdmin", "Admin", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("User")
            @Html.DropDownListFor(x=>x.UserId, ((List<SelectListItem>)ViewBag.Users),new {@class ="form-control"})
           
            <br>
            <br>
            @Html.Label("Admin Description")
            @Html.TextBoxFor(x=>x.AdminDescription,new {@class="form-control"})
            @Html.ValidationMessageFor(x=>x.AdminDescription)

            <br>
            <button class="btn btn-info">Add</button>
        </div>
    }
</div>

