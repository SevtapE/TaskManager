@using Entities.Concrete
@model Manager
@{
    ViewData["Title"] = "UpdateManager";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-sm-12">
    @using (Html.BeginForm("UpdateManager", "Manager", FormMethod.Post))
     {
         <div class="form-group">
            @Html.Label("User")
            @Html.DropDownListFor(x=>x.UserId, ((List<SelectListItem>)ViewBag.UsersUpdate),new {@class ="form-control"})

            <br>
            <br>
            @Html.Label("Company")
            @Html.DropDownListFor(x=>x.CompanyId, ((List<SelectListItem>)ViewBag.CompaniesUpdate),new {@class ="form-control"})

            <br>
            <br>
            @Html.Label("Title")
            @Html.TextBoxFor(x=>x.Title,new {@class="form-control"})
            @Html.ValidationMessageFor(x=>x.Title)

            <br>
            <br>
            @Html.Label("EmployeeRegistrationNumber")
            @Html.TextBoxFor(x=>x.EmployeeRegistrationNumber,new {@class="form-control"})
            @Html.ValidationMessageFor(x=>x.EmployeeRegistrationNumber)

            <br>
            <button class="btn btn-info">Add</button>
        </div>
        }
</div>

