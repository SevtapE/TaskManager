@using Core.Core.Security.Dtos
@model UserForUpdateDto

<div class="col-sm-12">
    @using (Html.BeginForm("UpdateUser", "User", FormMethod.Post))
    {
        <div class="form-group">
             @Html.Label("Id")
            @Html.TextBoxFor(x=>x.User.Id,new {@class="form-control"})
            <br>
            <br>
            @Html.Label("First Name")
            @Html.TextBoxFor(x=>x.User.FirstName,new {@class="form-control"})
            @Html.ValidationMessageFor(x=>x.User.FirstName)
            <br>
            <br>
            @Html.Label("Last Name")
            @Html.TextBoxFor(x=>x.User.LastName,new {@class="form-control"})
            @Html.ValidationMessageFor(x=>x.User.LastName)
            <br>
            <br>
            @Html.Label("Email")
            @Html.TextBoxFor(x=>x.User.Email,new {@class="form-control"})
            @Html.ValidationMessageFor(x=>x.User.Email)
            <br>
            <br>
            @Html.Label("Password")
            @Html.TextBoxFor(x=>x.Password,new {@class="form-control"})
            @Html.ValidationMessageFor(x=>x.Password)
            <br>
            <br>
               @Html.Label("Status")
            @Html.TextBoxFor(x=>x.User.Status,new {@class="form-control"})
            @Html.ValidationMessageFor(x=>x.User.Status)
            <br>
            <br>
            <button class="btn btn-info">Update</button>
        </div>
    }
</div>
